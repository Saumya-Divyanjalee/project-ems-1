<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="lk.ijse.gdse73.ems.mvc.employeemanagementsystem.Controller.TaskController"
            prefHeight="600.0" prefWidth="800.0">

    <children>
        <VBox spacing="20" layoutX="20.0" layoutY="20.0" prefWidth="760.0">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <Label text="Task Management" style="-fx-font-size: 22px; -fx-font-weight: bold;" />

            <!-- Input Fields -->
            <GridPane hgap="10" vgap="12">
                <columnConstraints>
                    <ColumnConstraints halignment="RIGHT"/>
                    <ColumnConstraints prefWidth="300"/>
                </columnConstraints>

                <Label text="Task ID:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="txtTaskId" promptText="T001" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Employee ID:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="txtEmployeeId" promptText="EMP001" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Description:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextField fx:id="txtDescription" promptText="Task details" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <Label text="Deadline:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <DatePicker fx:id="dpDeadline" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                <Label text="Status:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                <ComboBox fx:id="cmbStatus" promptText="Pending / Done" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
            </GridPane>

            <!-- Buttons -->
            <HBox spacing="15" alignment="CENTER">
                <Button text="Save" fx:id="btnSave" prefWidth="100"/>
                <Button text="Update" fx:id="btnUpdate" prefWidth="100"/>
                <Button text="Delete" fx:id="btnDelete" prefWidth="100"/>
                <Button text="Clear" fx:id="btnClear" prefWidth="100"/>
            </HBox>

            <!-- Table -->
            <TableView fx:id="tblTask" prefHeight="250" prefWidth="750">
                <columns>
                    <TableColumn fx:id="colTaskId" text="Task ID" prefWidth="100"/>
                    <TableColumn fx:id="colEmployeeId" text="Employee ID" prefWidth="100"/>
                    <TableColumn fx:id="colDescription" text="Description" prefWidth="200"/>
                    <TableColumn fx:id="colDeadline" text="Deadline" prefWidth="120"/>
                    <TableColumn fx:id="colStatus" text="Status" prefWidth="120"/>
                </columns>
            </TableView>
        </VBox>
    </children>
</AnchorPane>
