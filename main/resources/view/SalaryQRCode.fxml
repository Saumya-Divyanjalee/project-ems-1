<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="lk.ijse.gdse73.ems.mvc.employeemanagementsystem.Controller.SalaryQRCodeController"
      spacing="10" alignment="CENTER">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20" />
    </padding>

    <TextField fx:id="txtEmpId" promptText="Employee ID" />
    <TextField fx:id="txtMonth" promptText="Month (e.g. 2025-05)" />
    <TextField fx:id="txtNetSalary" promptText="Net Salary" />

    <Button text="Generate QR Code" onAction="#generateQRCodeOnAction" />

    <ImageView fx:id="imgQRCode" fitHeight="200" fitWidth="200" />

</VBox>
