<AnchorPane prefHeight="534.0" prefWidth="877.0" style="-fx-background-color: #007a5e;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.gdse73.ems.mvc.employeemanagementsystem.Controller.PositionsController">

    <children>
        <VBox alignment="TOP_CENTER" layoutX="20.0" layoutY="20.0" prefHeight="514.0" prefWidth="849.0" spacing="20">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>

            <Label style="-fx-font-size: 22px; -fx-font-weight: bold;" text="Manage Positions" textFill="WHITE">
            <font>
               <Font name="System Bold" size="12.0" />
            </font></Label>


            <GridPane hgap="10" vgap="15">
                <columnConstraints>
                    <ColumnConstraints halignment="RIGHT" />
                    <ColumnConstraints prefWidth="300" />
                </columnConstraints>

                <Label text="Position ID:" textFill="WHITE" GridPane.columnIndex="0" GridPane.rowIndex="0">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font></Label>
                <TextField fx:id="txtPositionId" prefHeight="25.0" prefWidth="447.0" promptText=" " GridPane.columnIndex="1" GridPane.rowIndex="0" />

                <Label text="Position Title:" textFill="WHITE" GridPane.columnIndex="0" GridPane.rowIndex="1">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font></Label>
                <TextField fx:id="txtPositionTitle" prefHeight="25.0" prefWidth="397.0" promptText=" " GridPane.columnIndex="1" GridPane.rowIndex="1" />

                <Label text="Salary Grade:" textFill="WHITE" GridPane.columnIndex="0" GridPane.rowIndex="2">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font></Label>
                <TextField fx:id="txtSalaryGrade" promptText="e.g. Grade A" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <rowConstraints>
               <RowConstraints />
               <RowConstraints />
               <RowConstraints />
            </rowConstraints>
            </GridPane>


            <HBox alignment="CENTER" spacing="15">
                <Button fx:id="btnSave" onAction="#saveOnAction" prefWidth="100" style="-fx-background-color: #ffeaa7;" text="Save">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font></Button>
                <Button fx:id="btnUpdate" onAction="#updateOnAction" prefWidth="100" style="-fx-background-color: #00cec9;" text="Update">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font></Button>
                <Button fx:id="btnDelete" onAction="#deleteOnAction" prefWidth="100" style="-fx-background-color: #ff7675;" text="Delete">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font></Button>
                <Button fx:id="btnReset" onAction="#resetOnAction" prefWidth="100" style="-fx-background-color: #b2bec3;" text="Reset">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font></Button>
            </HBox>


            <TableView fx:id="tblPositions" prefHeight="250" prefWidth="650">
                <columns>
                    <TableColumn fx:id="colPositionId" prefWidth="154.66668319702148" text="Position ID" />
                    <TableColumn fx:id="colPositionTitle" prefWidth="343.99998474121094" text="Position Title" />
                    <TableColumn fx:id="colSalaryGrade" prefWidth="310.0" text="Salary Grade" />
                </columns>
            </TableView>
        </VBox>
    </children>
